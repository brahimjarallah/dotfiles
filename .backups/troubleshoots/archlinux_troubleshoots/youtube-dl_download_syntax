youtube-dl --extract-audio --audio-format mp3 <video URL>


youtube-dl --extract-audio --audio-format mp3 <video URL> --verbose


youtube-dl --extract-audio --audio-format mp3 <video URL> --audio-quality 128k

youtube-dl --extract-audio --audio-format mp3 <video URL> --audio-quality 9


youtube-dl --extract-audio --audio-format mp3 'https://www.youtube.com/watch?v=H9yZ2y__qBs' --audio-quality 9 -o ~/Downloads/military_drumming.mp3 --verbose


