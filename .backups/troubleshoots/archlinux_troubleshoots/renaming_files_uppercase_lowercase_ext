----------------------------------------------------------------------
### ***  CURRENT DIR CONVERSION *** ###
----------------------------------------------------------------------
### ***  TO UPPERCASE FILES & DIRS (EXCEPT EXTEINSIONS) *** ###
perl-rename -v 's/(.*\/)?([^.]*)/$1\U$2/' *
----------------------------------------------------------------------
### ***  TO LOWERCASE FILES & DIRS (EXCEPT EXTEINSIONS) *** ###
perl-rename -v 's/(.*\/)?([^.]*)/$1\L$2/' *
----------------------------------------------------------------------
### *** CAPITALIZE ALL DIRS & FILES (EXCEPT EXTEINSIONS) *** ###
for f in *; do
    mv "$f" "$(perl -lpe 's/.*/lc($&)/e; s/(^| )./uc($&)/ge' <<<"$f")"
done
----------------------------------------------------------------------
----------------------------------------------------------------------
----------------------------------------------------------------------
----------------------------------------------------------------------

----------------------------------------------------------------------
### *** <<= RECURSIVE =>> TO UPPERCASE FILES & DIRS (EXCEPT EXTEINSIONS) *** ###
find . -depth | xargs -n 1 perl-rename -v 's/(.*\/)?([^.]*)/$1\U$2/' * {} \;
----------------------------------------------------------------------
### ***  <<= RECURSIVE =>> TO LOWERCASE FILES & DIRS (EXCEPT EXTEINSIONS) *** ###
find . -depth | xargs -n 1 perl-rename -v 's/(.*\/)?([^.]*)/$1\L$2/' * {} \;
----------------------------------------------------------------------
### *** <<= RECURSIVE =>> CAPITALIZE ALL DIRS & FILES (EXCEPT EXTEINSIONS) *** ###
find . -depth | xargs -n 1 perl-rename -v for f in *; do mv "$f" "$(perl -lpe 's/.*/lc($&)/e; s/(^| )./uc($&)/ge' <<<"$f")" done *\/)?([^.]*)/$1\L$2/' * {} \;
----------------------------------------------------------------------
----------------------------------------------------------------------
----------------------------------------------------------------------
----------------------------------------------------------------------

### ***  TO LOWERCASE FILES *** ###

find . -depth -type f -exec perl-rename -v 's/(.*\/)?([^.]*)/$1\L$2/' {} +
______________________________________________________________________
### ***  TO LOWERCASE DIRS *** ###

find . -depth -type d -exec perl-rename -v 's/(.*\/)?([^.]*)/$1\L$2/' {} +
______________________________________________________________________
### ***  TO LOWERCASE FILES & DIRS *** ###

find . -depth -exec perl-rename -v 's/(.*\/)?([^.]*)/$1\L$2/' {} +
______________________________________________________________________
### ***  TO UPPERCASE FILES (EXCEPT EXTEINSIONS) *** ###

find . -depth -type f -exec perl-rename -v 's/(.*\/)?([^.]*)/$1\U$2/' {} +
______________________________________________________________________
### ***  TO UPPERCASE DIRS (EXCEPT EXTEINSIONS) ###

find . -depth -type d -exec perl-rename -v 's/(.*\/)?([^.]*)/$1\L$2/' {} +
______________________________________________________________________
### ***  TO UPPERCASE FILES & DIRS *** ###

find . -depth -exec perl-rename -v 's/(.*\/)?([^.]*)/$1\U$2/' {} +
______________________________________________________________________
### *** CAPITALIZE ALL DIRS & FILES *** ###


perl-rename 's/(?<!\.)\b\w*/\u$&/g' *

---------------------------
### ***  Capitalizing all avoiding after the -> polarizing (appostrophe "'") *** ###
perl-rename 's/(?<![.'\''])\b\w*/\u$&/g' *
______________________________________________________________________

### *** CAPITALIZE FILES & DIRS (WITH .EXTENSIONS ONLY) *** ###

perl-rename 's/(?<!\.)\b\w*/\u$&/g' *.*

______________________________________________________________________
______________________________________________________________________
______________________________________________________________________

### ***  RECURSIVE ALL FILES & FOLDERS TO LOWERCASE *** ###
#
 find . -depth | xargs -n 1 perl-rename 's/(.*)\/([^\/]*)/$1\/\L$2/' {} \;
 or
 find . -depth -exec perl-rename 's/(.*)\/([^\/]*)/$1\/\L$2/' {} \;

______________________________________________________________________

### *** RECUSISVE ALL FILES ONLY TO LOWERCASE  *** ###
find . -depth -type f | xargs -n 1 perl-rename 's/(.*)\/([^\/]*)/$1\/\L$2/' {} \;

______________________________________________________________________

### *** RECUSISVE ALL DIRECTORIES ONLY TO LOWERCASE  *** ###
find . -depth -type d | xargs -n 1 perl-rename 's/(.*)\/([^\/]*)/$1\/\L$2/' {} \;

